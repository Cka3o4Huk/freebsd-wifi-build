#!/bin/sh

# XXX ideally these will be installed as part of the package;
# I'll do that later.

. /etc/rc.subr
. /etc/rc.conf.default
. /etc/cfg/rc.conf

dropbear_cmd_options="-R"

case $1 in
	'start')
		/usr/local/sbin/dropbear ${dropbear_cmd_options} || exit 127
		exit 0
		;;
	'stop')
		kill `cat /var/run/dropbear.pid` || exit 127
		exit 0
		;;
	*)
		echo "$0: start|stop"
		exit 127
		;;
esac

exit 0
